<p id="notice"><%= notice %></p>

<h1><%= AgeRange.model_name.human(count: 2) %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @age_ranges.each do |age_range| %>
      <tr>
        <td><%= age_range.description %></td>
        <td><%= link_to 'Show', age_range %></td>
        <td><%= link_to 'Edit', edit_age_range_path(age_range) %></td>
        <td><%= link_to 'Destroy', age_range, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

