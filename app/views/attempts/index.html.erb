<p id="notice"><%= notice %></p>

<h1><%= Attempt.model_name.human(count: 2) %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t('view.attribute.protocol.one')%></th>
      <th><%= t('view.attribute.d_puncture.one')%></th>
      <th><%= t('view.worker.one')%></th>
      <th><%= t('view.obs.one')%></th>
      <th><%= t('view.attribute.try.try')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attempts.each do |attempt| %>
      <tr>
        <td><%= attempt.record.protocol %></td>
        <td><%= l(attempt.d_puncture) %></td>
        <td><%= attempt.worker.description %></td>
        <td><%= attempt.observation.description %></td>
        <td><%= attempt.try %></td>
        <td><%= link_to t('link.show'), attempt %></td>
        <td><%= link_to t('link.edit'), edit_attempt_path(attempt) %></td>
        <td><%= link_to t('link.destroy'), attempt, method: :delete, data: { confirm: t('link.sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('view.attempt.new'), new_attempt_path,class:"btn btn-primary", role:"button" %> 
<%= link_to t('link.back_index'), welcome_index_path, class:"btn btn-secondary", role:"button" %>
