<%= form_with(model: attempt, local: true) do |form| %>
  <% if attempt.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(attempt.errors.count, "error") %> prohibited this attempt from being saved:</h2>

      <ul>
      <% attempt.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= form.label :record_id %>
    <%= form.select("record_id", @record_options, {include_blank: t('view.attribute.select')}, class:"form-control") %>
  </div>

  <div class="form-group">
    <%= form.label :d_puncture %>
    <%= form.date_field :d_puncture, class:"form-control", placeholder:"#{l(Date.today)}" %>
  </div>
  
  <div class="form-group">
    <%= form.label :worker_id %>
    <%= form.select("worker_id", @worker_options, {include_blank: t('view.attribute.select')}, class:"form-control") %>
  </div>
  
  <div class="form-group">
    <%= form.label :observation_id %>
    <%= form.select("observation_id", @observation_options, {include_blank: t('view.attribute.select')}, class:"form-control") %>
  </div>
  
  <div class="form-group">
    <%= form.label :try %>
    <%= form.text_field :try, class:"form-control", placeholder:"Ex.: 1}" %>
  </div>

  <div class="actions">
    <%= form.submit nil, class:"btn btn-primary" %>
    <%= link_to t('link.back'), records_path, class:"btn btn-secondary", role:"button" %>
  </div>
<% end %>
