<p id="notice"><%= notice %></p>

<h1><%= Observation.model_name.human(count: 2) %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t('view.attribute.description.one')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @observations.each do |observation| %>
      <tr>
        <td><%= observation.description %></td>
        <td><%= link_to t('link.show'), observation %></td>
        <td><%= link_to t('link.edit'), edit_observation_path(observation) %></td>
        <td><%= link_to t('link.destroy'), observation, method: :delete, data: { confirm: t('link.sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('view.obs.new'), new_observation_path, class:"btn btn-primary", role:"button" %>|
<%= link_to t('link.back_index'), welcome_index_path, class:"btn btn-secondary", role:"button" %>
