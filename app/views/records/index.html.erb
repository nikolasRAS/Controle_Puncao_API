<p id="notice"><%= notice %></p>

<h1><%= Record.model_name.human(count: 2) %></h1>

<div class="pull-right query">
  <%= form_tag search_path, method: :get do %>
    <%= text_field_tag 'search[protocol]', @search.protocol%>
    <%= submit_tag 'Pesquisar Protocolo', class: 'btn search_button' %>
  <% end %>  
</div>
<br>

<table class="table table-hover">
  <thead>
    <tr>      
      <th><%= t('view.attribute.protocol.one')%></th>
      <th><%= t('view.attribute.date_s.one')%></th>
      <th><%= t('view.attribute.patient.one')%></th>
      <th><%= t('view.attribute.age_range.one')%></th>
      <th><%= t('view.attribute.age.one')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>        
        <td><%= record.protocol %></td>
        <td><%= l(record.date_s) %></td>
        <td><%= record.patient %></td>        
        <td><%= record.age_range.description %></td>
        <td><%= record.age %></td>
        <td><%= link_to t('link.show'), record %></td>
        <td><%= link_to t('link.edit'), edit_record_path(record) %></td>
        <td><%= link_to t('link.destroy'), record, method: :delete, data: { confirm: t('link.sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('view.record.new'), new_record_path, class:"btn btn-primary", role:"button" %> 
<%= link_to t('link.back_index'), welcome_index_path, class:"btn btn-secondary", role:"button" %>
